[Unit]
Description=nexus service
After=network.target

[Service]
Type=forking
LimitNOFILE={{ nexus_max_filedescriptors }}
ExecStart={{ nexus_installation_path }}/nexus-latest/bin/nexus start
ExecStop={{ nexus_installation_path }}/nexus-latest/bin/nexus stop
User={{ nexus__user }}
Restart=on-abort

[Install]
WantedBy=multi-user.target